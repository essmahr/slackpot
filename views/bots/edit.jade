extends ../layout

block content
  form(role='form', action='/bots/edit/#{bot._id}', method="post")
    .form-input
      input(type='text', name="title", value=bot.title, placeholder='Enter Title')
    .form-input
      input(type='text', name="frequency", value=bot.frequency, placeholder='frequency')
    .form-input
      input(type='text', name="channel", value=bot.channel, placeholder='channel')
    .form-input
      label
        input(type='checkbox', name="businessDays", value="1", checked=bot.businessDays)
        .label-text Business Days?
    button(type='submit') Update

    br
  a(href='/bots/delete/#{bot.id}') Delete
  br
  a(href='/bots') Cancel
