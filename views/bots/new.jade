extends ../layout

block content
  h1 Create a bot
  form(role='form', action="/bots/new", method="post")
    .form-input
      input(type='text', name="title", placeholder='Enter Title')
    .form-input
      input(type='number', name="frequency", placeholder='frequency')
    .form-input
      input(type='text', name="channel", placeholder='channel')
    .form-input
      label
        input(type='checkbox', name="businessDays")
        .label-text Business Days?
    button(type='submit') Create

    a(href='/bots')
      button(type="button") Cancel
